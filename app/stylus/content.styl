.content
	float right
	width 740px
	margin-left 30px

.slider
	margin-bottom 50px

.slider-list
	padding 0
	
.slider-list__item
	position relative

.slider-list__link
	display block
	text-decoration none
	color

.slider__item-desc
	position: absolute
	width 100%
	bottom 0px
	background-color rgba(0, 0, 0, 0.5)
	padding 18px 24px

.item-desc__header
	font: 18px 'elektra_light_proregular'
	color #00b9fe
	text-decoration: underline
	margin 0 0 8px 0

.item-desc__text
	font 14px 'elektra_light_proregular'
	color #fff
	margin 0

.bx-prev, 
.bx-next
	display block
	position absolute
	top 103px
	height 34px
	width 79px
	font 16px/38px 'elektra_light_probold'
	color #5c7b98
	text-align center
	text-decoration none
	background-image url('../img/decor/slider-controls.png')
	transition color 0.3s ease 0s
	

.bx-prev
	left 10px
	background-position left top
	&:hover
		background-position left bottom
		color #fff

.bx-next
	right 10px
	background-position right top
	&:hover
		background-position right bottom
		color #fff
	

product_bg = #fff

.product
	cf()
	border-top 1px solid #5c7b98
	padding 0 0 30px 0

.product__header
	font 25px/30px 'elektra_light_probold'
	text-align center
	background-color product_bg
	margin -15px auto 10px
	width 280px
	color #5c7b98

.product__list
	cf()
	list-style none
	padding 0
	margin 0 0 0 -25px
	
.product__item
	float left
	width 194px
	margin-left 25px
	padding 12px 17px 17px 17px
	border 1px solid #dae1eb
	box-shadow(0px 0px 15px -5px #000)

.product__link
	text-decoration none
	display block

.product-thumb
	cf()
	margin-bottom 20px 

.product__img-wrapper
	float left
	width 90px
	wow-effect()
	
.product__img
	display block

		

.product__title
	float left
	width 94px
	margin-left 10px
	color #00b9fe
	font 15px/20px 'elektra_light_proregular'
	text-decoration underline

.product-prop__table
	font 14px/20px 'elektra_light_proregular'
	color #5c7b98
.product-prop__cell
	width: 100px
	
